<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoDataAnnotationsContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.DataAnnotations\**\*.*</OurUmbracoDataAnnotationsContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoDataAnnotationsAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoDataAnnotationsContentFiles Include="$(OurUmbracoDataAnnotationsContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.DataAnnotations files: $(OurUmbracoDataAnnotationsContentFilesPath) - #@(OurUmbracoDataAnnotationsContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OurUmbracoDataAnnotationsContentFiles)"
            DestinationFiles="@(OurUmbracoDataAnnotationsContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.DataAnnotations\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearOurUmbracoDataAnnotationsAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoDataAnnotationsDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.DataAnnotations\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.DataAnnotations data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoDataAnnotationsDir)"  />
    </Target>

</Project>